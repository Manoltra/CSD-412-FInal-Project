.env.example
# Environment Configuration for Expense Tracker
# Copy this file to .env and update values for your environment

# Server Configuration
NODE_ENV=production
USE_HTTPS=true
PORT=443

# SSL/TLS Certificates
# For AWS: Use AWS Certificate Manager or Let's Encrypt
# For local: Generate self-signed certificates
SSL_CERT_PATH=/app/certs/server.crt
SSL_KEY_PATH=/app/certs/server.key

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USER=appuser
DB_PASSWORD=change-me-to-strong-password
DB_NAME=expense_tracker

# JWT Configuration
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Logging
LOG_LEVEL=info

# API Configuration
API_PORT=5000
API_BASE_URL=https://api.yourdomain.com

# External API Keys (for integrations)
CURRENCY_API_KEY=your-currency-api-key
FINANCIAL_API_KEY=your-financial-api-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Redis Cache (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Configuration
SESSION_SECRET=change-me-to-random-string
SESSION_TIMEOUT=3600000
